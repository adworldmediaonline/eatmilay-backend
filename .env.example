# Better Auth
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3005

# Frontend (for CORS and trusted origins)
FRONTEND_URL=http://localhost:3000
# User frontend (optional, when running on different port)
FRONTEND_USER_URL=http://localhost:3001
# Additional trusted origins, comma-separated (production: https://admin.eatmilay.com,https://www.eatmilay.com,https://eatmilay.com)
# TRUSTED_ORIGINS=
# Root domain for cross-subdomain cookies (only when NOT using auth proxy)
# COOKIE_DOMAIN=.eatmilay.com
# When admin/frontend proxy /api/auth to backend, set to true so cookies are first-party
# USE_AUTH_PROXY=true

# MongoDB
MONGODB_URI=mongodb://localhost:27017/admin-panel

# Email (Nodemailer SMTP)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=Admin Panel <noreply@example.com>

# Cloudinary (for image uploads in admin)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Razorpay (payments)
RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_KEY_SECRET=xxx

# Shiprocket (shipping)
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external
SHIPROCKET_API_EMAIL=
SHIPROCKET_API_PASSWORD=
# Must match EXACT pickup location name in Shiprocket dashboard (e.g. "Milay Millet Snacks" or "Primary")
SHIPROCKET_PICKUP_LOCATION=Milay Millet Snacks
